{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "commonjs": true,
        "node": true
    },
    "rules": {
        "indent": ["error", 4],
        "quotes": [
            "error",
            "single",
            {
              "allowTemplateLiterals": true
            }
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-dupe-args": 2,
        "no-eq-null": 2,
        "no-func-assign": 2,
        "no-undef": 1,
        "no-use-before-define": 2
    }
}
